<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AppointmentCreationFragment"
    android:background="?colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?colorPrimaryDark">

        <EditText
            android:id="@+id/appointmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Nom de l'évènement"
            android:inputType="textPersonName"
            android:textColor="?colorAccent" />

        <EditText
            android:id="@+id/appointmentCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Ville"
            android:inputType="textPersonName"
            android:textColor="?colorAccent" />

        <EditText
            android:id="@+id/appointmentPostalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Code postal"
            android:inputType="textPersonName"
            android:textColor="?colorAccent" />

        <EditText
            android:id="@+id/appointmentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Adresse"
            android:inputType="textPersonName"
            android:textColor="?colorAccent" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Date de l'évènement: "
            android:textColor="?colorAccent">
        </TextView>

        <DatePicker
            android:id="@+id/appointmentDate"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:text="Date de l'évènement" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Heure de l'évènement: "
            android:textColor="?colorAccent">
        </TextView>

        <TimePicker
            android:id="@+id/appointmentTime"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:timePickerMode="spinner" />

        <EditText
            android:id="@+id/appointmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Description de l'évènement"
            android:inputType="textMultiLine"
            android:layout_margin="5dp"
            android:textColor="?colorAccent" />

        <Button
            android:id="@+id/createAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="?colorPrimary"
            android:text="Créer l'évènement"
            android:textColor="?colorAccent" />
    </LinearLayout>

</ScrollView>