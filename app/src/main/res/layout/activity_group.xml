<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|fill"
        android:orientation="vertical">

        <TextView
            android:id="@+id/GroupTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/Group_title"
            android:textAlignment="center"
            android:textSize="15pt"></TextView>

        <LinearLayout
            android:id="@+id/TopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GroupTitle"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/AvatarLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/GroupAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/ButtonChangeAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:onClick="sendFeedback"
                    android:text="@string/Group_send_modification"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/GroupNameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/AvatarLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Group_name_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/GroupAvatar"
                    android:text="@string/Group_name_label"
                    android:textAlignment="textStart"
                    android:textSize="10pt"></TextView>

                <EditText
                    android:id="@+id/Group_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/Group_name_label"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/GroupAvatar"
                    android:hint="@string/Group_name"
                    android:inputType="textPersonName"></EditText>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/Group_description_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/TopLayout"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/Group_description_label"
            android:textAlignment="textStart"
            android:textSize="10pt"></TextView>

        <EditText
            android:id="@+id/Group_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Group_description_label"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:hint="@string/Group_description"
            android:inputType="textMultiLine"
            android:lines="7"></EditText>

        <Button
            android:id="@+id/ButtonSendFeedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Group_description"
            android:layout_margin="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="sendFeedback"
            android:text="@string/Group_send_modification"></Button>

    </RelativeLayout>
</ScrollView>