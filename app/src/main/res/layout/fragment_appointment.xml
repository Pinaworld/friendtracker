<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AppointmentFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?colorPrimary"
        >

        <TextView
            android:id="@+id/fragAppointmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="30dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/fragAppointmentGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="30dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/fragAppointmentDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/fragAppointmentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonFindItinerary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Trouver itinÃ©raire"
            android:background="?colorPrimary"
            android:textColor="?colorAccent" />

    </LinearLayout>

</FrameLayout>